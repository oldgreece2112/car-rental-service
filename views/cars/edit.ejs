<%- include("../partials/header"); %>
    <form method="post" action="cars/edit">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="year">Year:</label>
                    <input id="year" class="form-control" type="text" name="year" value="<%= car.year%>">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="make">Make:</label>
                    <input id="make" class="form-control" type="text" name="make" value="<%= car.make %>">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="model">Model:</label>
                    <input id="model" class="form-control" type="text" name="model" value="<%= car.model %>">
                </div>
            </div>
            <div class="form-group">
                <label for="desc">Description:</label>
                <textarea id="desc" class="form-control" name="desc" rows="3"><%= car.desc %></textarea>
            </div>
            <div class="form-group">
                <label for="notes">Notes:</label>
                <textarea id="notes" class="form-control" name="notes" rows="3"><%= car.notes %></textarea>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="img">Image(URL):</label>
                    <input id="img" class="form-control" type="text" name="img" value="<%= car.img %>">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="mileage">Mileage:</label>
                    <input id="mileage" class="form-control" type="number" name="mileage" value="<%= car.mileage%>">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="currentlyRented">Currently Rented:</label>
                    <select id="currentlyRented" class="form-control" name="currentlyRented">
                        <option>Please Select either True or False</option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="price">Price per Day</label>
                    <input id="price" class="form-control" type="number" name="price" value="<%= car.price %>">
                </div>
            </div>
            <div class="float-right">
                <button class="btn btn-primary" type="submit">Add New Car</button>
            </div>
        </div>
    </form>
<%= include("../partials/footer"); %>